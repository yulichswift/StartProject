<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_file"
    app:startDestination="@id/fragment_menu">

    <fragment
        android:id="@+id/fragment_menu"
        android:name="com.jeff.startproject.view.file.FileMenuFragment"
        tools:layout="@layout/fragment_file_menu">

        <action
            android:id="@+id/action_file_menu_to_content"
            app:destination="@id/fragment_content"
            app:enterAnim="@anim/ani_enter"
            app:exitAnim="@anim/ani_exit"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/ani_pop_enter"
            app:popExitAnim="@anim/ani_pop_exit" />
    </fragment>

    <fragment
        android:id="@+id/fragment_content"
        android:name="com.jeff.startproject.view.file.FileContentFragment"
        tools:layout="@layout/fragment_file_content">
    </fragment>
</navigation>