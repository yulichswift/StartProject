<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/ic_car">

    <target android:name="body">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="2000"
                android:interpolator="@android:interpolator/linear"
                android:propertyName="fillColor"
                android:startOffset="0"
                android:valueFrom="@android:color/holo_red_light"
                android:valueTo="@android:color/holo_orange_light"
                android:valueType="colorType" />
        </aapt:attr>
    </target>

    <target android:name="body">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="2000"
                android:interpolator="@android:interpolator/linear"
                android:propertyName="fillColor"
                android:startOffset="2000"
                android:valueFrom="@android:color/holo_orange_light"
                android:valueTo="@android:color/holo_green_light"
                android:valueType="colorType" />
        </aapt:attr>
    </target>

    <target android:name="body">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="2000"
                android:interpolator="@android:interpolator/linear"
                android:propertyName="fillColor"
                android:startOffset="4000"
                android:valueFrom="@android:color/holo_green_light"
                android:valueTo="@android:color/holo_red_light"
                android:valueType="colorType" />
        </aapt:attr>
    </target>

    <target
        android:animation="@animator/animator_car_move"
        android:name="all" />

</animated-vector>